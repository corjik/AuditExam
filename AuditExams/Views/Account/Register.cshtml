@model AuditExams.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}


<div class="container">
    <h1>Регистрация</h1>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" id="registerForm">
        <div>
            <div class="form-group">
                <label asp-for="FirstName">Введите имя</label><br />
                <input type="text" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Введите фамилию</label><br />
                <input type="text" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div id="btn">
                <input type="submit" value="Регистрация" class="form-control btn-success" />
            </div>
        </div>
    </form>
</div>