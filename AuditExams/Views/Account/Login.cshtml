@model AuditExams.ViewModels.LoginModel
@{
    ViewData["Title"] = "Вход в систему";
}
<div class="container">
    <h1>Вход в систему</h1>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" id="loginForm">
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div id="btn">
            <input type="submit" value="Войти" class="form-control btn-primary" />
        </div>
    </form>
</div>

<div class="container">
    <h3>Нет аккаунта? <a asp-action="Register" asp-controller="Account">Зарегестрируйтесь.</a></h3>
</div>

